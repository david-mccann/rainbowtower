<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.skydoves.colorpickerview.ColorPickerView
        android:id="@+id/colorPickerView1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/brightnessView"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        app:palette="@drawable/palette_round"
        app:selector="@drawable/wheel">

    </com.skydoves.colorpickerview.ColorPickerView>

    <com.skydoves.colorpickerview.ColorPickerView
        android:id="@+id/colorPickerView2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignEnd="@+id/brightnessView"
        android:layout_alignTop="@+id/colorPickerView1"
        android:layout_gravity="center"
        app:palette="@drawable/palette_round"
        app:selector="@drawable/wheel">

    </com.skydoves.colorpickerview.ColorPickerView>

    <com.skydoves.colorpickerview.ColorPickerView
        android:id="@+id/colorPickerView3"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignEnd="@+id/brightnessView"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="97dp"
        app:palette="@drawable/palette_round"
        app:selector="@drawable/wheel" />

    <com.skydoves.colorpickerview.ColorPickerView
        android:id="@+id/colorPickerView4"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignStart="@+id/brightnessView"
        android:layout_alignTop="@+id/colorPickerView3"
        android:layout_gravity="center"
        app:palette="@drawable/palette_round"
        app:selector="@drawable/wheel">

    </com.skydoves.colorpickerview.ColorPickerView>

    <com.david_mccann.rainbowtower.BrightnessView
        android:id="@+id/brightnessView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>